.download-form {
    position: relative;
}

.download-form.sending .fields {
    opacity: 0.2;
}

.download-form .download {
    margin-top: 20px;
    display: none;
}

.download-form .loader {
    display: none;

    position: absolute;
    width: 100%;
    margin-top: 80px;

    text-align: center;
    font-size: 1.1em;
    font-weight: bold;
    z-index: 10;
}
.download-form .errors {
    margin: 10px 0;
}

.download-form.sending .loader {
    display: block;
}
.download-form.sending .loader .fa {
    margin-right: 15px;
}